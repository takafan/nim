#!/usr/bin/env ruby

lib_path = File.expand_path('../../lib', __FILE__)
$:.unshift(lib_path)
require 'nim'
require 'nim/version'

begin
  raise Nim::VERSION if ['--version', '-v'].include? ARGV[0]

  nim = Nim::Nim.new
  nim.unsafe_positions{|x| puts x.join ' '}
  
rescue Exception => e
  print "#{e.class}: " unless e.class == RuntimeError
  puts "#{e.message}"
  exit 1
end
